{
    // .bashrc is not respected by VSCode's intergrated terminal
    // To acheive behavior similar to .bashrc --init-file can be used
    // to explicitly run a shell script when a new integrated terminal instance
    // is started.
    "terminal.integrated.profiles.osx": {
        "bash": {
            "path": "/bin/bash",
            "icon": "terminal",
            "args": ["--init-file", "${workspaceFolder}/integrated-terminal-init.sh"]
        },
    },
    "terminal.integrated.defaultProfile.osx": "bash",
    "python.defaultInterpreterPath": "${workspaceFolder}/bin/python3",
    "explorer.sortOrder": "type"
}